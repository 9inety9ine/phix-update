{% assign padding_top = section.settings.padding_top | divided_by: 12.0 | append: "em" %}
{% assign padding_bottom = section.settings.padding_bottom | divided_by: 12.0 | append: "em" %}
{% assign mobile_padding_top = section.settings.mobile_padding_top | divided_by: 12.0 | append: "em" %}
{% assign mobile_padding_bottom = section.settings.mobile_padding_bottom | divided_by: 12.0 | append: "em" %}

<style>
    .wrap--{{ section_id }} {
        padding-top: {{ padding_top }};
        padding-bottom: {{ padding_bottom }};
    }
    @media (max-width:1024px) {
        .wrap--{{ section_id }} {
            padding-top: {{ mobile_padding_top }};
            padding-bottom: {{ mobile_padding_bottom }};
        }
    }
</style>