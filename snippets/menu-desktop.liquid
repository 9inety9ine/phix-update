                                    {% if request.design_mode %}
                                    src="{{ block.settings.feature_1_image.src | img_url: "300x400", crop: "center" }}" 
                                    {% else %}
                                    src="{{ "preload.gif" | asset_url }}" 
                                    data-src="{{ block.settings.feature_1_image.src | img_url: "300x400", crop: "center" }}" 
                                    {% endif %}
                                    width="300" 
                                    height="400" 
                                    alt="{{ block.settings.feature_1_label }}"
                                >
