<link href="{{ "menu-desktop.css" | asset_url }}" rel="stylesheet">

<nav>
    <ul class="menu menu-desktop">
    {% for block in section.blocks %}
        <li class="menu-desktop__item">
            <a href="{{ block.settings.url }}" class="menu-desktop__link">{{ block.settings.label }}</a>
