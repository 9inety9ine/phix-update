<link href="{{ "card-product-lookbook.css" | asset_url }}" rel="stylesheet">

{% assign show_video = product.metafields.product.show_product_card_video.value %}

<div class="card-product-lookbook{% unless request.design_mode or show_video == "True" %} preload{% endunless %}">

    <div class="card-product-lookbook__media">
        <a href="{{ product.url | within: collection }}" aria-label="{{ product.title }}">
            {% if show_video == 'True' %}
                {% assign video_count = 0 %}
                {% for media in product.media %}
                    {% if media.media_type == 'video' %}
                    <video muted="" loop="" playsinline="" autoplay="" poster="">
                        <source src="{{ media.sources[1].url }}" type="video/mp4">
                    </video>
                    {% assign video_count = video_count | plus: 1 %}
                    {% endif %}
                    {% if video_count == 1 %}{% break %}{% endif %}
                {% endfor %}
            {% else %}
            <img 
                {% if request.design_mode %}
                src="{{ product.featured_image.src | img_url: '600x820', crop: "center" }}" 
                {% else %}
                src="{{ "preload.gif" | asset_url }}" 
                data-src="{{ product.featured_image.src | img_url: '600x820', crop: "center" }}" 
                class="preload" 
                {% endif %}
                alt="{{ product.title }}" 
                width="600" 
                height="820" 
            >
            {% endif %}
        </a>
    </div>
    <div class="card-product-lookbook__details">
        <div class="card-product-lookbook__title">
            <h4><a href="{{ product.url | within: collection }}" aria-label="{{ product.title }}">{{ product.title }}</a></h4>
        </div>
        <div class="card-product-lookbook__price">
            {% render "product-price", product: product %}
        </div>
    </div>

</div>