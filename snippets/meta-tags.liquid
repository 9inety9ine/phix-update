    {% if template == "index" %}
    <title>{{ shop.name }}{% if settings.short_description != blank %} - {{ settings.short_description | escape }}{% endif %}</title>
    {% elsif template == "search" %}
    <title>Search - {{ shop.name }}</title>
    {% else %}
    <title>{{ page_title }} - {{ shop.name }}</title>
    {% endif %}
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    {% if template contains "collection" %}
    <meta name="description" content="{{ collection.description | escape }}">
    {% elsif template == "index" %}
        {%- if settings.long_description != blank -%}
    <meta name="description" content="{{ settings.long_description | escape }}">
        {%- else -%}
    <meta name="description" content="{{ page_description | escape }}">
        {%- endif -%}
    {% else %}
    <meta name="description" content="{{ page_description | escape }}">
    {% endif %}
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">

    {% assign canonicalUrl = canonical_url %}
    {% assign canonicalUrl = canonicalUrl | split: '?' | first %}
    {% if canonicalUrl contains "tagged" %}
    <meta name="robots" content="noindex">
    {% endif %}
    <link rel="canonical" href="{{ canonicalUrl }}" />
    
