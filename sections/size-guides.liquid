    "name": "Size Guides",
    "tag": "section",
    "class": "section-size-guides",
    "blocks": [
        {
            "type": "title",
            "name": "Title",
            "settings": [
                {
                    "type": "text",
                    "id": "title",
                    "label": "Text"
                }
            ]
        },
        {
