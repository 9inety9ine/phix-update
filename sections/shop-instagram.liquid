<link href="{{ "shop-instagram.css" | asset_url }}" rel="stylesheet">

<div class="wrap wrap--xx-large wrap--no-padding-x-large wrap--{{ section_id }}">

    <div id="instafeed" class="section-shop-instagram__inner"></div>

</div>
<script src="https://ig.instant-tokens.com/users/37ff5468-5275-4de3-ad2f-39e52419df25/instagram/6587700211251565/token.js?userSecret=v5j4bj2441p702aa46rwrm"></script>
