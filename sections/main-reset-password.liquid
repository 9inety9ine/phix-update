{% assign section_id = section.id | replace: "_", "" | replace: "-", "" %}
{% render "section-styles", section_id: section_id, section: section %}

<link href="{{ "main-reset-password.css" | asset_url }}" rel="stylesheet">

<div class="wrap wrap--medium wrap--{{section_id }}">

    <h3>{{ 'customer.reset_password.title' | t }}</h3>

    {% form 'reset_customer_password', class: "form form--reset-password" %}

        {{ form.errors | default_errors }}

        <div class="form-row form-row--full">
            <label for="password" class="required">{{ 'customer.reset_password.enter_password' | t }}</label>
            <input type="password" value="" name="customer[password]" size="16" required="required">
        </div>
        <div class="form-row form-row--full">
            <label for="password_confirmation" class="required">{{ 'customer.reset_password.confirm_password' | t }}</label>
            <input type="password" value="" name="customer[password_confirmation]" size="16" required="required">
        </div>
        <div class="form-row form-row--full form-row--actions">
            <button type="submit" class="button" aria-label="{{ 'customer.reset_password.reset_button' | t }}">{{ 'customer.reset_password.reset_button' | t }}</button>
        </div>
        <input type="hidden" name="return_to" value="/account">

    {% endform %}
    
</div>

{% schema %}
{
    "name": "Reset Password",
    "tag": "section",
    "class": "section-reset-password",
    "settings": [
        {
            "type": "header",
            "content": "Desktop padding"
        },
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 128,
            "step": 2,
            "unit": "px",
            "label": "Padding top",
            "default": 64
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 128,
            "step": 2,
            "unit": "px",
            "label": "Padding bottom",
            "default": 64
        },
        {
            "type": "header",
            "content": "Mobile padding"
        },
        {
            "type": "range",
            "id": "mobile_padding_top",
            "min": 0,
            "max": 128,
            "step": 2,
            "unit": "px",
            "label": "Padding top",
            "default": 32
        },
        {
            "type": "range",
            "id": "mobile_padding_bottom",
            "min": 0,
            "max": 128,
            "step": 2,
            "unit": "px",
            "label": "Padding bottom",
            "default": 32
        }
    ]
}
{% endschema %}