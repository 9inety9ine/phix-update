{% assign section_id = section.id | replace: "_", "" | replace: "-", "" %}
{% render "section-styles", section_id: section_id, section: section %}

<link href="{{ "meet-content.css" | asset_url }}" rel="stylesheet">

{% assign padding_top = section.settings.padding_top | divided_by: 12.0 | append: "em" %}
{% assign mobile_padding_top = section.settings.mobile_padding_top | divided_by: 12.0 | append: "em" %}

<style>
    .wrap--{{ section_id }} .section-meet-content__inner {
        padding-top: {{ padding_top }};
    }
    @media (max-width:1024px) {
        .wrap--{{ section_id }} .section-meet-content__inner {
            padding-top: {{ mobile_padding_top }};
        }
    }
</style>

<div class="wrap wrap--{{ section.settings.width }} wrap--{{ section_id }}" style="text-align: {{ section.settings.alignment }};">
    <div class="section-meet-content__inner">
        {{ page.content }}
    </div>
</div>

{% schema %}
{
    "name": "Meet Content",
    "tag": "section",
    "class": "section-meet-content",
    "settings": [
        {
            "type": "select",
            "id": "width",
            "label": "Width",
            "options": [
                {
                    "value": "small",
                    "label": "Small"
                },
                {
                    "value": "medium",
                    "label": "Medium"
                },
                {
                    "value": "large",
                    "label": "Large"
                },
                {
                    "value": "x-large",
                    "label": "X Large"
                },
                {
                    "value": "xx-large",
                    "label": "XX Large"
                },
                {
                    "value": "full-width",
                    "label": "Full Width"
                }
            ],
            "default": "large"
        },
        {
            "type": "header",
            "content": "Desktop padding"
        },
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 128,
            "step": 2,
            "unit": "px",
            "label": "Padding top",
            "default": 64
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 128,
            "step": 2,
            "unit": "px",
            "label": "Padding bottom",
            "default": 64
        },
        {
            "type": "header",
            "content": "Mobile padding"
        },
        {
            "type": "range",
            "id": "mobile_padding_top",
            "min": 0,
            "max": 128,
            "step": 2,
            "unit": "px",
            "label": "Padding top",
            "default": 32
        },
        {
            "type": "range",
            "id": "mobile_padding_bottom",
            "min": 0,
            "max": 128,
            "step": 2,
            "unit": "px",
            "label": "Padding bottom",
            "default": 32
        }
    ],
    "presets":[
        {
            "name": "Meet Content"
        }
    ],
    "templates": ["page"]
}
{% endschema %}