{% assign section_id = section.id | replace: "_", "" | replace: "-", "" %}
{% render "section-styles", section_id: section_id, section: section %}

<link href="{{ "main-collection.css" | asset_url }}" rel="stylesheet">

<div class="wrap wrap--xx-large wrap--{{section_id }} wrap--no-padding-s-mobile">

    {% paginate collection.products by 999 %}
        <ul class="products">
        {% for product in collection.products %}
            <li class="products__product">{% render "card-product", product: product %}</li>
        {% else %}
            <li class="products__no-product"><p>{{ 'collection.no_products' | t }}</p></li>
        {% endfor %}
        </ul>
        {% if paginate.pages > 1 %}
        <div class="pagination section-collection__pagination">
            {{ paginate | default_pagination: next: '>', previous: '<' }}
        </div>
        {% endif %}
    {% endpaginate %}

</div>

{% schema %}
{
    "name": "Collection",
    "tag": "section",
    "class": "section-collection",
    "settings": [
        {
            "type": "header",
            "content": "Desktop padding"
        },
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 128,
            "step": 2,
            "unit": "px",
            "label": "Padding top",
            "default": 64
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 128,
            "step": 2,
            "unit": "px",
            "label": "Padding bottom",
            "default": 64
        },
        {
            "type": "header",
            "content": "Mobile padding"
        },
        {
            "type": "range",
            "id": "mobile_padding_top",
            "min": 0,
            "max": 128,
            "step": 2,
            "unit": "px",
            "label": "Padding top",
            "default": 32
        },
        {
            "type": "range",
            "id": "mobile_padding_bottom",
            "min": 0,
            "max": 128,
            "step": 2,
            "unit": "px",
            "label": "Padding bottom",
            "default": 32
        }
    ]
}
{% endschema %}