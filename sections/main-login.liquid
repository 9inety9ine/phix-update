{% assign section_id = section.id | replace: "_", "" | replace: "-", "" %}
{% render "section-styles", section_id: section_id, section: section %}

<link href="{{ "main-login.css" | asset_url }}" rel="stylesheet">

<div class="wrap wrap--small wrap--{{section_id }}">

    <div class="section-login__inner">

        <div class="section-login__header">
            <button aria-label="{{ 'customer.login.title' | t }}" class="toggle-login-form active">{{ 'customer.login.title' | t }}</button>
            <button aria-label="{{ 'customer.register.title' | t }}" class="toggle-register-form">{{ 'customer.register.title' | t }}</button>
        </div>

        <div class="section-login__container">

            <div class="section-login__account-login active">
                <div class="section-login__form section-login__form--login show">
                    <h2 style="display: none;">{{ 'customer.login.title' | t }}</h2>
                    {% render "form-login", cutomer: customer %}
                </div>
                <div class="section-login__form section-login__form--forgot-password">
                    <h2 style="display: none;">{{ 'customer.forgot_password.title' | t }}</h2>
                    {% render "form-forgot-password", cutomer: customer %}
                </div>
            </div>

            <div class="section-login__account-register">
                <div class="section-login__form section-login__form--register show">
                    <h2 style="display: none;">{{ 'customer.register.title' | t }}</h2>
                    {% render "form-register", cutomer: customer %}
                    <script src="{{ 'confirm-password.js' | asset_url }}" defer></script>
                </div>
            </div>

        </div>

    </div>

</div>

<script src="{{ "main-login.js" | asset_url }}" defer></script>

{% schema %}
{
    "name": "Login",
    "tag": "section",
    "class": "section-login",
    "settings": [
        {
            "type": "header",
            "content": "Desktop padding"
        },
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 128,
            "step": 2,
            "unit": "px",
            "label": "Padding top",
            "default": 64
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 128,
            "step": 2,
            "unit": "px",
            "label": "Padding bottom",
            "default": 64
        },
        {
            "type": "header",
            "content": "Mobile padding"
        },
        {
            "type": "range",
            "id": "mobile_padding_top",
            "min": 0,
            "max": 128,
            "step": 2,
            "unit": "px",
            "label": "Padding top",
            "default": 32
        },
        {
            "type": "range",
            "id": "mobile_padding_bottom",
            "min": 0,
            "max": 128,
            "step": 2,
            "unit": "px",
            "label": "Padding bottom",
            "default": 32
        }
    ]
}
{% endschema %}