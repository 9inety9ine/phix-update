{% assign section_id = section.id | replace: "_", "" | replace: "-", "" %}
{% render "section-styles", section_id: section_id, section: section %}

<link href="{{ "main-list-collections.css" | asset_url }}" rel="stylesheet">

<div class="wrap wrap--xx-large wrap--{{ section_id }}">

    <ul>
    {% for collection in collections %}
        {% unless collection.handle == 'frontpage' %}
        <li><a href="{{ collection.url }}">{{ collection.title | escape }}</a></li>
        {% endunless %}
    {% endfor %}
    </ul>
    
</div>

{% schema %}
{
    "name": "List Collections",
    "tag": "section",
    "class": "section-list-collections",
    "settings": [
        {
            "type": "header",
            "content": "Desktop padding"
        },
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 128,
            "step": 2,
            "unit": "px",
            "label": "Padding top",
            "default": 64
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 128,
            "step": 2,
            "unit": "px",
            "label": "Padding bottom",
            "default": 64
        },
        {
            "type": "header",
            "content": "Mobile padding"
        },
        {
            "type": "range",
            "id": "mobile_padding_top",
            "min": 0,
            "max": 128,
            "step": 2,
            "unit": "px",
            "label": "Padding top",
            "default": 32
        },
        {
            "type": "range",
            "id": "mobile_padding_bottom",
            "min": 0,
            "max": 128,
            "step": 2,
            "unit": "px",
            "label": "Padding bottom",
            "default": 32
        }
    ]
}
{% endschema %}