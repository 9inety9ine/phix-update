{% assign section_id = section.id | replace: "_", "" | replace: "-", "" %}
{% render "section-styles", section_id: section_id, section: section %}

<link href="{{ "main-blog.css" | asset_url }}" rel="stylesheet">

<div class="wrap wrap--xx-large wrap--{{section_id }}">

    {% paginate blog.articles by 5 %}

    <h1>{{ blog.title }}</h1>

    {% for article in blog.articles %}
    <div>
        <h2><a href="{{ article.url }}">{{ article.title }}</a></h2>
        <div>
        {% if article.excerpt.size > 0 %}
            {{ article.excerpt }}
        {% else %}
            <p>{{ article.content | strip_html | truncatewords: 100 }}</p>
        {% endif %}
        </div>
    </div>
    {% endfor %}
    
    {% if paginate.pages > 1 %}
    {{ paginate | default_pagination }}
    {% endif %}
    
    {% endpaginate %}

</div>

{% schema %}
{
    "name": "Blog",
    "tag": "section",
    "class": "section-blog",
    "settings": [
        {
            "type": "header",
            "content": "Desktop padding"
        },
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 128,
            "step": 2,
            "unit": "px",
            "label": "Padding top",
            "default": 64
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 128,
            "step": 2,
            "unit": "px",
            "label": "Padding bottom",
            "default": 64
        },
        {
            "type": "header",
            "content": "Mobile padding"
        },
        {
            "type": "range",
            "id": "mobile_padding_top",
            "min": 0,
            "max": 128,
            "step": 2,
            "unit": "px",
            "label": "Padding top",
            "default": 32
        },
        {
            "type": "range",
            "id": "mobile_padding_bottom",
            "min": 0,
            "max": 128,
            "step": 2,
            "unit": "px",
            "label": "Padding bottom",
            "default": 32
        }
    ]
}
{% endschema %}